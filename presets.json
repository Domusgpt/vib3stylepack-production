{
    "visualStyles": {
        "holo-dark-background": {
            "type": "background",
            "parameters": {
                "shader": "holoBackground",
                "color": [0.02, 0.02, 0.05, 1.0],
                "noiseAmount": 0.07,
                "intensity": 0.25,
                "timeScale": 0.1
            }
        },
        "glass-panel-primary": {
            "type": "ui-element", 
            "parameters": {
                "shader": "glassPanelEffect",
                "noiseScale": 20.0,
                "noiseSpeed": 0.1,
                "noiseIntensity": 0.03,
                "timeScale": 0.1
            }
        },
        "glass-panel-accent": {
            "type": "ui-element",
            "parameters": {
                "shader": "glassPanelEffect", 
                "noiseScale": 25.0,
                "noiseSpeed": 0.15,
                "noiseIntensity": 0.05,
                "timeScale": 0.1
            }
        },
        "vaporwave-grid-accent": {
            "type": "ui-element",
            "parameters": {
                "shader": "vaporwaveGrid",
                "gridColor": [0.0, 1.0, 1.0, 0.8],
                "gridScale": 20.0,
                "gridSpeed": 0.5,
                "glowIntensity": 2.0,
                "timeScale": 0.1
            }
        },
        "category-ema-visual": {
            "type": "background",
            "parameters": {
                "shader": "holoBackground",
                "color": [0.1, 0.0, 0.05, 1.0],
                "noiseAmount": 0.08,
                "intensity": 0.3,
                "timeScale": 0.1
            }
        },
        "ema-verdict-visualizer": {
            "type": "ui-element",
            "parameters": {
                "shader": "vaporwaveGrid",
                "gridColor": [1.0, 0.2, 0.2, 0.9],
                "gridScale": 15.0,
                "gridSpeed": 0.3,
                "glowIntensity": 1.5,
                "timeScale": 0.1
            }
        },
        "article-background-placeholder": {
            "type": "background",
            "parameters": {
                "shader": "holoBackground",
                "color": [0.01, 0.02, 0.04, 1.0],
                "noiseAmount": 0.05,
                "intensity": 0.2,
                "timeScale": 0.08
            }
        },
        "article-header-visual": {
            "type": "ui-element",
            "parameters": {
                "shader": "glassPanelEffect",
                "noiseScale": 30.0,
                "noiseSpeed": 0.05,
                "noiseIntensity": 0.02,
                "timeScale": 0.1
            }
        }
    },
    "interactionPresets": {
        "glass-panel-hover": {
            "trigger": "mouseover",
            "target": "self",
            "animation": {
                "duration": 300,
                "easing": "ease-out",
                "properties": {
                    "noiseIntensity": 0.08,
                    "noiseSpeed": 0.2
                }
            },
            "revert": "mouseout"
        },
        "category-link-pulse": {
            "trigger": "mouseover", 
            "target": "self",
            "animation": {
                "duration": 500,
                "easing": "ease-in-out",
                "properties": {
                    "intensity": 0.4
                }
            },
            "revert": "mouseout"
        },
        "featured-article-focus": {
            "trigger": "mouseover",
            "target": "self", 
            "animation": {
                "duration": 400,
                "easing": "ease-out",
                "properties": {
                    "noiseIntensity": 0.1,
                    "noiseSpeed": 0.25
                }
            },
            "revert": "mouseout"
        }
    }
}